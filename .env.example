# Required
RUNPOD_ENDPOINT=https://api.runpod.ai/v2/YOUR_ENDPOINT_ID/runsync
RUNPOD_API_KEY=your_runpod_api_key

# Optional
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# RunPod
MAX_CONCURRENT_REQUESTS=3
RUNPOD_CONNECT_TIMEOUT=120.0
RUNPOD_JOB_TIMEOUT_SECONDS=300.0

# Security
REQUIRE_AUTH=False
BRIDGE_TOKEN=secret_token_here

# Streaming TTS (Phase 1)
ENABLE_STREAMING=true
ECHOTTS_STREAMING_ENDPOINT=https://api.runpod.ai/v2/YOUR_ENDPOINT_ID/runsync

